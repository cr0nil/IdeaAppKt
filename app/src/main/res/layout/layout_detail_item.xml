<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class = "DetailDataBinding">

        <variable
                name="historicalData"
                type="com.karolapp.ideaappkt.model.HistoricalData" />

        <variable
                name="handler"
                type="com.karolapp.ideaappkt.services.holder.CurrencyHolder" />
    </data>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:weightSum="100">

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="20">

            <TextView
                    android:id="@+id/cryptocurrency_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="test"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80">

            <TextView

                    android:id="@+id/cryptocurrency_rate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    android:text="test" />
        </RelativeLayout>

    </LinearLayout>
</layout>
